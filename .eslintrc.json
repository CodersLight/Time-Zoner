{
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
      "json"
    ],
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
          1,
          {
            "argsIgnorePattern": "(config)?(args)?"
          }
        ],
        "no-console": 0
    }
}
